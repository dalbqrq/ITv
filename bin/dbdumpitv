#!/bin/bash

d=`date "+%Y-%m-%d"`
tmpfile=/tmp/itv-tables

echo "show tables like 'itvision_%'" | mysql -u ndoutils --password='itv' ndoutils | grep -v Tables_in_ > $tmpfile
tables=`cat $tmpfile`

mysqldump -u ndoutils --password='itv' --add-drop-table --no-data ndoutils $tables > /usr/local/itvision/ks/itvision-$d.sql

\rm $tmpfile
